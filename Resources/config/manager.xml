<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sly_pushover.pushover_service.class">Sly\PushOver\PushManager</parameter>
        <parameter key="sly_pushover.manager.class">Sly\PushOverBundle\Manager\Manager</parameter>
    </parameters>

    <services>
        <service id="sly_pushover.pushover_service" class="%sly_pushover.pushover_service.class%" />

        <service id="sly_pushover" class="%sly_pushover.manager.class%">
            <argument type="service" id="sly_pushover.pushover_service" />
            <argument type="service" id="sly_pushover.config_manager" />
        </service>
    </services>

</container>
